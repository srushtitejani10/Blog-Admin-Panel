<%- include("./layouts/header") %>

<!--end::Sidebar-->
<!--begin::App Main-->
<main class="app-main">
  <!--begin::App Content Header-->
  <div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
      <!--begin::Row-->
      <div class="row align-center">
        <div class="col-sm-6"><h3 class="mb-0">Edit Admin</h3></div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">
              Edit Admin
            </li>
          </ol>
        </div>
      </div>
      <!--end::Row-->
    </div>
    <!--end::Container-->
  </div>
  <!--end::App Content Header-->
  <!--begin::App Content-->
  <div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
      <!--begin::Row-->
      <div class="row g-4">
        <!--begin::Col-->

        <!--end::Col-->
        <!--begin::Col-->
        <div class="col-md-12">
          <!--begin::Quick Example-->
          <div class="card card-primary card-outline mb-4">
            <!--begin::Header-->

            <!--end::Header-->
            <!--begin::Form-->
            <form method="post" action="/editAdminRecords" enctype="multipart/form-data">
              <input type="hidden" name="id" value="<%=editAdmin.id%>">
              <!--begin::Body-->
              <div class="card-body row">
                <div class="col-md-6 mb-3">
                  <label for="validationCustom01" class="form-label"
                    >First name</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="validationCustom01"
                    required
                    name="fname"
                    placeholder="Enter First Name"
                    value="<%=fullName[0]%>"
                  />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-md-6 mb-3">
                  <label for="validationCustom02" class="form-label"
                    >Last name</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="validationCustom02"
                    required
                    name="lname"
                    placeholder="Enter Last Name"
                    value="<%=fullName[1]%>"
                  />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="card-body row">
                  <div class="col-md-6 mb-3">
                    <label for="exampleInputEmail1" class="form-label"
                      >Email address</label
                    >
                    <input
                      type="email"
                      class="form-control"
                      id="exampleInputEmail1"
                      aria-describedby="emailHelp"
                      name="email"
                      placeholder="Enter Email"
                      value="<%=editAdmin.email%>"
                    />
                    <div id="emailHelp" class="form-text">
                      We'll never share your email with anyone else.
                    </div>
                  </div>
                  <div class="mb-3 col-md-6">
                    <label for="exampleInputPassword1" class="form-label"
                      >Password</label
                    >
                    <input
                      type="password"
                      class="form-control"
                      id="exampleInputPassword1"
                      name="password"
                      placeholder="Enter Password"
                      value="<%=editAdmin.password%>"
                    />
                  </div>
                </div>
                <div class="input-group mb-3">
                  <input
                    type="file"
                    class="form-control"
                    id="inputGroupFile02"
                    name="image"
                  />
                  <label class="input-group-text" for="inputGroupFile02"
                  >Upload</label
                  >
                </div>
                <div class="mb-3">
                <img src="<%=editAdmin.image%>" height="100" alt="">

                </div>

                <fieldset class="row mb-3">
                  <legend class="col-form-label col-sm-2 pt-0">
                    Select Hobbies
                  </legend>
                  <div class="col-sm-10">
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        name="hobby"
                        id="gridRadios1"
                        value="Reading" <%if(editAdmin.hobby.includes("Reading")){%><%='checked'%><%}%>
                      />
                      <label class="form-check-label" for="gridRadios1">
                        Reading
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        name="hobby"
                        id="gridRadios2"
                        value="Cycling" <%if(editAdmin.hobby.includes('Cycling')){ %><%='checked'%><%}%>
                      />
                      <label class="form-check-label" for="gridRadios2">
                        Cycling
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        name="hobby"
                        id="gridRadios1"
                        value="Travelling"  <%if(editAdmin.hobby.includes('Travelling')){%><%='checked'%><%}%>
                      />
                      <label class="form-check-label" for="gridRadios1">
                        Travelling
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        name="hobby"
                        id="gridRadios2"
                        value="Coading" <%if(editAdmin.hobby.includes('Coading')){%><%='checked'%><%}%>
                      />
                      <label class="form-check-label" for="gridRadios2">
                        Coading
                      </label>
                    </div>
                  </div>
                </fieldset>
                <div class="col-md-12 mb-3">
                  <label for="validationCustom04" class="form-label"
                    >Select City</label
                  >
                  <%let
                  city=["Surat","Ahmadabad","Rajkot","Amreli","Bhavnagar"]%>
                  <select
                    class="form-select"
                    id="validationCustom04"
                    name="categoryId"
                  >
                    <option selected disabled value="">--Select-Category--</option>
                    <%city.map((v,i)=>{%>
                      <option value="<%=v%>"<%if(editAdmin.city=v){%><%='selected'%><%}%>><%=v%></option>
                <%})%>
                  </select>
                  <div class="invalid-feedback">
                    Please select a valid state.
                  </div>
                </div>

                <fieldset class="row mb-3">
                  <legend class="col-form-label col-sm-2 pt-0">
                    Select Gender
                  </legend>
                  <div class="col-sm-10">
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="gender"
                        id="gridRadios1"
                        value="Male"  <%if(editAdmin.gender='Male'){%><%='checked'%><%}%>
                      />
                      <label class="form-check-label" for="gridRadios1">
                        Male
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="gender"
                        id="gridRadios2"
                        value="Female" <%if(editAdmin.gender='Female'){%><%='checked'%><%}%>
                      />
                      <label class="form-check-label" for="gridRadios2">
                        Female
                      </label>
                    </div>
                  </div>
                </fieldset>
                <div class="input-group">
                  <span class="input-group-text">Message</span>
                  <textarea
                    class="form-control"
                    aria-label="With textarea"
                    name="message"
                  ><%=editAdmin.message%></textarea>
                </div>
              </div>
              <!--end::Body-->
              <!--begin::Footer-->
              <div class="card-footer">
                <button type="submit" class="btn btn-primary me-0">
                  Edit Admin
                </button>
              </div>
              <!--end::Footer-->
            </form>
            <!--end::Form-->
          </div>
          <!--end::Horizontal Form-->
        </div>
        <!--end::Col-->
        <!--begin::Col-->
        <div class="col-md-6">
          <!--end::Form Validation-->
        </div>
        <!--end::Col-->
      </div>
      <!--end::Row-->
    </div>
    <!--end::Container-->
  </div>
  <!--end::App Content-->
</main>
<!--end::App Main-->
<!--begin::Footer-->

<%- include("./layouts/footer") %>
